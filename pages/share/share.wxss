.new-share{
  background: #fff;
  margin: 20rpx;
}

.share-title{
  color: #393333;
  font-size: 40rpx;
  line-height: 1;
  padding-top: 20rpx;
}

.share-time{
  display: flex;
  align-items: flex-end;
  font-size: 28rpx;
  line-height: 1;
  padding-top: 28rpx;
}

.share-time>view:nth-child(1){
  color: #4358C6;
}

.share-time>view:nth-child(2){
  color: #393333;
  margin-left: 30rpx;
}

.share-img{
  width: 100%;
  display: block;
  margin: 30rpx 0;
}

.number{
  display: flex;
  justify-content: center;
  align-items: center;
  color: RGBA(0, 153, 204, 1);
  font-size: 28rpx;
  padding: 30rpx 0 20rpx 0;
}

.number>text{
  color: RGBA(255, 51, 51, 1);
  padding: 0 10rpx;
}

.text-tip{
  color: RGBA(51, 51, 51, 1);
  font-size: 26rpx;
  line-height: 1.7;
}

.text-tip>text>text{
  font-weight: bold;
  color: RGBA(51, 51, 51, 1);  
}

.text-tip-b{
  color: RGBA(51, 51, 51, 1);
  font-size: 32rpx;
  font-weight: bold;
}

.br{
  border-bottom: 2rpx solid #e5e5e5;
  margin-top: 40rpx;
}

.share-down{
  width: 20rpx;
  display: block;
  margin: 0 auto;
  padding: 40rpx 0;
}

.footer-text ,.foot-text-2{
  text-align: center;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.foot-text-2{
  color: #cc0000;
  padding-top: 44rpx;
  padding-bottom: 20rpx;
}

.foot-text-2>image{
  width: 36rpx;
  height: 36rpx;
  margin-left: 10rpx;
}

.footer-number{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 0;
  line-height: 1;
}

.footer-number>view{
  display: flex;
  align-items: center;
}

.footer-number image{
  width: 40rpx;
  height: 40rpx;
  padding-right: 4rpx;
}

.fn-left{
  color: #0099CC;
  font-size: 32rpx;
}

.fn-left>text{
  color: #999999;
  padding-left: 30rpx;
}

.fn-right{
  color: #0099CC;
  font-size: 32rpx;
}

.share-sx{
  margin: 0;
  padding: 0;
  border: none;
}

.share-sx::after{
  border: none;
}
